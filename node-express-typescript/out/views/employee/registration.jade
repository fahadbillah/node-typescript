extends ../layout

block content
  h1 User Registration
  .col-md-6.col-md-offset-3
    form.form-horizontal(action='/employee/registration/submit' method="post")
      .form-group
        label First Name
        input.form-control(type="text" name="firstName")
      .form-group
        label Last Name
        input.form-control(type="text" name="lastName")
      .form-group
        label Email
        input.form-control(type="Email" name="email")
      .form-group
        button.btn.btn-info(type="submit") Submit
        

